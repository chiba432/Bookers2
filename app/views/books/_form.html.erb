<div class="col-xs-3">
	<h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: '100x100' %>
    <table class="table">
  	    <tbody>
  		    <tr></tr>
  	        <tr>
		        <th>name</th>
  	            <th><%= current_user.name %></th>
            </tr>
            <tr>
        	    <th>introduction</th>
        	    <th><%= current_user.introduction %></th>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <%= link_to "", edit_user_path(current_user), class: 'btn btn-default glyphicon glyphicon-wrench col-xs-12' %>
    </div>

    <h2>New book</h2>
    <%= form_for @newbook,:url => {controller: "books", action: "create"} do |f| %>
        <div class="row form-group">
            <label for="book_title">Title</label>
                <%= f.text_field :title, class: 'col-xs-12' %>
        </div>
        <div class="row form-group">
            <label for="book_opinion">Opinion</label>
                <%= f.text_area :body, class: 'col-xs-12' %>
        </div>
        <div class="row form-group">
            <%= f.submit 'Create Book', class: 'btn btn-primary col-xs-12' %>
        </div>
    <% end %>
</div>