 
<div>
	<h1>Editing Book</h1>

	<%= render 'layouts/error_messages', model: @book %>

	<%= form_for(@book) do |f| %>

	<label>Title</label>
	  <%= f.text_field :title %>
	<label>Opinion</label>
	  <%= f.text_area :body %>
	<p><%= f.submit 'Update Book' %></p>

	<% end %>

	<p>
      <%= link_to 'Show', book_path %>
            |
      <%= link_to 'Back', books_path %>
	</p>


</div>
