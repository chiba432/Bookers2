<div class="container">
    <%= render 'layouts/error_messages', model: @newbook %>
    <div class="row">
        <%= render 'books/form' %>

        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th clspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '40x40'), user_path(book.user) %></td>
                            <td><%= link_to book.title, book %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>