
<%= render 'layouts/error_messages', book: @book %>

<h2>User info</h2>
<div>
</div>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

  <div>
    <label>Title</label>
      <%= f.text_field :title %>
  </div>

  <div>
    <label>Opinion</label>
      <%= f.text_area :body %>
  </div>

  <div>
  <p><%= f.submit 'Create Book' %></p>
  </div>

<% end %>

<h2>Books</h2>

<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th clspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to 'book.title', book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>