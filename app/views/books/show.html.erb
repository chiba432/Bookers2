<h2>New book</h2>

<%= form_for(@book) do |f| %>

  <div>
    <label>Title</label>
      <%= f.text_field :title %>
  </div>

  <div>
    <label>Opinion</label>
      <%= f.text_area :body %>
  </div>

  <div>
  <p><%= f.submit 'Create Book' %></p>
  </div>

<% end %>

<h2>Book detail</h2>

<div>
  <table>
    <tbody>
        <tr>
          <td><%= link_to @books.title, book_path %></td>
          <td><%= @books.body %></td>
          <td><%= link_to "Edit", edit_book_path(@books) %></td>
          <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
        </tr>
    </tbody>
  </table>
</div>