<h2>New book</h2>

<%= form_for(@newbook) do |f| %>

  <div>
    <label>Title</label>
      <%= f.text_field :title %>
  </div>

  <div>
    <label>Opinion</label>
      <%= f.text_area :body %>
  </div>

  <div>
  <p><%= f.submit 'Create Book' %></p>
  </div>

<% end %>

<h2>Book detail</h2>

<div>
  <table>
    <tbody>
        <tr>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %>
          </td>
        </tr>
    </tbody>
  </table>
</div>