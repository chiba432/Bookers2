<div class="container">
<h2>User info</h2>

  <%= render 'layouts/error_messages', model: @user %>

<%= form_for(@user) do |f| %>
    <div class="form-group">
	  <label>Name</label>
	    <%= f.text_field :name %>
	</div>
	<div class="form-group">
		<label>Image</label>
		<%= f.attachment_field :profile_image %>
	</div>
	<div class="form-group">
		<label>Introduction</label>
		<%= f.text_area :introduction %>
	</div>
	<div class="form-group">
      <%= f.submit 'Update User' %>
	</div>
<% end %>
</div>